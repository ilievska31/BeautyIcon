@model IEnumerable<Brand>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Brands
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

        @foreach (var b in Model)
        {
            <a asp-controller="Products" asp-action="IndexByBrand" asp-route-bid="@b.BrandId" class="dropdown-item">@b.BrandName</a>
        }

        <div class="dropdown-divider"></div>
        <a asp-controller="Products" asp-action="Index" class="dropdown-item">All brands</a>
    </div>
</li>